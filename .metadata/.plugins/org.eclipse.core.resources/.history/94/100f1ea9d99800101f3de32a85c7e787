package beginner_Exercises_Unit_1;
import java.util.*;
public class Ejercicio_4 {

	public static void main(String[] args) {
		/*------------------------------------------------------------
		 * 						EJERCICIO_4
		 ------------------------------------------------------------*/
		/*------------------------------------------------------------
		 * Realiza un programa que pida al usuario tres n√∫meros y 
		 * calcule y muestre en pantalla la suma de los tres.
		 * ------------------------------------------------------------
		 * */
		
		//Usamos el Metodo Scanner para interactuar con datos del usuario
		Scanner s=new Scanner(System.in);
		System.out.println("Introduce el primer numero: ");
		double numMedia_1=s.nextDouble();
		System.out.println("Introduce el segundo numero: ");
		double numMedia_2=s.nextDouble();
		System.out.println("Introduce el tercer numero: ");
		double numMedia_3=s.nextDouble();
		//Ahora, guardamos la suma de los 3 numeros en una variable
		double suma=numMedia_1+numMedia_2+numMedia_3;
		//Dividimos la suma por la cantidad de numeros (3)
		double media=suma/3;
		System.out.println("Media: "+media);
		
		//Cerramos el Scanner
		s.close();
	}

}
