package beginner_Exercises_Unit_1;
import java.util.*;
public class Ejercicio_1 {

	public static void main(String[] args) {
		/*------------------------------------------------------------
		 * Realiza un programa que pida al usuario tres números: 
		 * uno de tipo entero, otro de tipo flotante y otro de 
		 * tipo doble. A continuación se tienen que mostrar en 
		 * pantalla los tres números en una sola fila de la consola 
		 * de salida.
		 * ------------------------------------------------------------
		 * */
		
		
		//Importamos el Metodo Scanner para obtener datos del Usuario
		Scanner s=new Scanner(System.in);
		System.out.println("Introduce el primer numero (int)");
		int numEntero=s.nextInt();
		System.out.println("Introduce el segundo numero (float)");
		float numFlotante=s.nextFloat();
		System.out.println("Introduce el tercer numero (double)");
		double numDouble=s.nextDouble();
		System.out.println("Numeros|Entero: "+numEntero+"| Flotante: "+numFlotante+"| Doble: "+numDouble);
	}

}
